<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VibeDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout_top"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/ic_activity_common_album_back" />

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:layout_weight="3"
            android:text="#설레는"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/GridLayout_center"
        android:layout_width="match_parent"
        android:layout_height="705dp"
        android:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_top"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="186dp"
            android:layout_height="170dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="13dp"
            app:srcCompat="@drawable/ic_activity_vibe_main_posttest" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="179dp"
            android:layout_height="244dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="13dp"
            android:background="@color/back_txt" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="179dp"
            android:layout_height="155dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="13dp"
            android:background="@color/back_txt" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="179dp"
            android:layout_height="244dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="13dp"
            android:background="@color/back_txt" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/GridLayout_center"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_addpost_2"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_activity_vibe_main_postaddbtn" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>