<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/activity_register_password_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="비밀번호를 입력해주세요"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password_title" />


    <EditText
        android:id="@+id/activity_register_password_set"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="비밀번호"
        android:backgroundTint="@color/black"
        android:textColor="@color/grey"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password_subtitle" />

    <EditText
        android:id="@+id/activity_register_password_setcheck"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="15dp"
        android:text="비밀번호 확인"
        android:backgroundTint="@color/black"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password_set" />

    <TextView
        android:id="@+id/activity_register_password_againtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 한 번 더 입력해주세요."
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password_setcheck" />

    <TextView
        android:id="@+id/activity_register_password_8_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8~12자"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password_set" />

    <TextView
        android:id="@+id/activity_register_password_title"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/activity_register_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_activity_common_album_back"
        app:layout_constraintEnd_toStartOf="@+id/activity_register_password_title"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/activity_register_password_visible"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_activity_register_password_visible"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_password_set"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="@+id/activity_register_password_set"
        app:layout_constraintTop_toTopOf="@+id/activity_register_password_set" />

    <ImageView
        android:id="@+id/activity_register_password_visible2"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_activity_register_password_visible"
        app:layout_constraintEnd_toEndOf="@id/activity_register_password_setcheck"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="@id/activity_register_password_setcheck"
        app:layout_constraintTop_toTopOf="@id/activity_register_password_setcheck" />

    <Button
        android:id="@+id/activity_register_password_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="다음"
        android:textColor="@color/grey"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />




</androidx.constraintlayout.widget.ConstraintLayout>