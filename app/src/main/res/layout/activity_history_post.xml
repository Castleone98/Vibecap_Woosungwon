<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryMainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-129dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/imageButton_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="0.5"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="TODO"
                android:minHeight="48dp"
                tools:src="@drawable/ic_activity_history_post_close" />

            <TextView
                android:id="@+id/tv_post"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="게시물 작성하기"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_complete"
                android:layout_width="75dp"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/ic_activity_history_post_complete"
                android:gravity="center"
                android:text="완료"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="651dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/et_search_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="13dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:text="제목을 입력해보세요"
                android:textColor="@color/back_txt" />

            <TextView
                android:id="@+id/tv_title_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingRight="13dp"
                android:textAlignment="textEnd"
                android:textColor="@color/back_txt"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_post"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:ems="10"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textStyle="bold"
                android:text="글을 작성해보세요."
                android:textColor="@color/back_txt" />


            <TextView
                android:id="@+id/tv_content_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="13dp"
                android:textAlignment="textEnd"
                android:textColor="@color/back_txt"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!-- 해시태그 수정 필요(1/5) -->
            <EditText
                android:id="@+id/et_tag"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:text="#해시태그 추가"
                android:padding="13dp"
                android:textColor="@color/back_txt" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
